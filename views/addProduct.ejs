<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
</head>
<body>
    <div>
        <h1>Add Product</h1>
    </div>

    <a href="/">Home</a>

    <div class="form">
        <form action="/products/add" method="POST">
            <div>
                <label for="name">Product Name</label>
                <input type="text" name="name" id="name" placeholder="Enter product name">
            </div>
            <div>
                <label for="price">Product Price</label>
                <input type="number" name="price" id="price" placeholder="Enter product price">
            </div>
            <div>
                <label for="description">Product Description</label>
                <input type="text" name="description" id="description" placeholder="Enter product description">
            </div>
            <div>
                <label for="image">Product Image</label>
                <input type="text" name="image" id="image" placeholder="Enter product image">
            <div>
                <label for="category">Product Category</label>
                <% categories.forEach(category => { %>
                    <div>
                        <input type="radio" name="category" id="category" value="<%= category.id %>">
                        <label for="category"><%= category.name %></label>

                    </div>
                <% }) %>
            </div>
                <button type="submit">Add Product</button>
            </div>
        </form>
    </div>
</body>
</html>